{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],

    "paths": {
      "@/*": ["./src/*"]
    },

    // Enable the following options to better support modern JavaScript features
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true,
  }
}